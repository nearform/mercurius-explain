{
  "name": "mercurius-explain",
  "version": "2.0.0",
  "description": "A plugin for mercurius",
  "main": "index.js",
  "type": "module",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts",
    "lib"
  ],
  "scripts": {
    "lint": "eslint .",
    "example": "node example/index.js",
    "test": "npm run test:unit && npm run test:types",
    "test:unit": "c8 --100 tap --jobs=2 --no-coverage test/*.test.js",
    "benchmark": "node ./benchmark/benchmark.js",
    "test:types": "tsd",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/mercurius-explain"
  },
  "keywords": [
    "mercurius"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nearform/mercurius-explain/issues"
  },
  "homepage": "https://github.com/nearform/mercurius-explain#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@fastify/autoload": "5.7.1",
    "@fastify/cors": "^8.1.0",
    "@mercuriusjs/federation": "^0.1.0",
    "@mercuriusjs/gateway": "^0.2.0",
    "autocannon": "^7.10.0",
    "c8": "^7.12.0",
    "desm": "^1.3.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fastify": "^4.5.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mercurius": "11.5.0",
    "prettier": "^2.7.1",
    "sinon": "^15.0.0",
    "strip-ansi": "^7.0.1",
    "tap": "^16.0.0",
    "tsd": "^0.25.0"
  },
  "tsd": {
    "directory": "test/types"
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint --cache --fix"
  },
  "peerDependencies": {
    "fastify": "4.x",
    "mercurius": "11.x"
  },
  "dependencies": {
    "fastify-plugin": "^4.2.1",
    "semver": "7.3.8"
  }
}
