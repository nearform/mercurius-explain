{
  "name": "mercurius-explain",
  "version": "2.0.9",
  "description": "A plugin for mercurius",
  "main": "index.js",
  "type": "module",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts",
    "lib"
  ],
  "scripts": {
    "lint": "eslint .",
    "example": "node example/index.js",
    "test": "npm run test:unit && npm run test:types",
    "test:unit": "c8 --100 tap --jobs=2 --no-coverage test/*.test.js",
    "benchmark": "node ./benchmark/benchmark.js",
    "test:types": "tsd",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/mercurius-explain"
  },
  "keywords": [
    "mercurius"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nearform/mercurius-explain/issues"
  },
  "homepage": "https://github.com/nearform/mercurius-explain#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@fastify/autoload": "6.0.1",
    "@fastify/cors": "^10.0.1",
    "@mercuriusjs/federation": "^4.0.0",
    "@mercuriusjs/gateway": "^3.0.0",
    "autocannon": "^7.10.0",
    "c8": "^10.1.2",
    "desm": "^1.3.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "fastify": "^5.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.0.1",
    "mercurius": "14.1.0",
    "prettier": "^3.0.1",
    "sinon": "^19.0.2",
    "strip-ansi": "^7.0.1",
    "tap": "^16.0.0",
    "tsd": "^0.31.0"
  },
  "tsd": {
    "directory": "test/types"
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint --cache --fix"
  },
  "peerDependencies": {
    "fastify": "4.x",
    "mercurius": ">=11.x"
  },
  "dependencies": {
    "fastify-plugin": "^5.0.1",
    "semver": "7.6.3"
  }
}
